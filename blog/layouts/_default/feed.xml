{{- $writingPages := where .Site.RegularPages "Section" "writing" -}}
{{- $speakingPages := where .Site.RegularPages "Section" "speaking" -}}
{{- $posts := union $writingPages $speakingPages -}}
{{- $posts = where $posts "Params.rss_ignore" "ne" true -}}
{{- $posts = sort $posts "Date" "desc" -}}
{{- "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ with .Permalink }}{{ . }}{{ else }}{{ .Site.BaseURL }}{{ end }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ else }}{{ .Site.Title }}{{ end }}</description>
    {{ with .Site.LanguageCode }}<language>{{ . }}</language>{{ end }}
    <ttl>1209600</ttl>
    {{- $lastPost := index $posts 0 -}}
    {{- if $lastPost }}
    {{- with $lastPost.PublishDate | default $lastPost.Date }}
    <lastBuildDate>{{ .Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>
    {{- end }}
    {{- end }}
    <atom:link href="{{ with .Permalink }}{{ . }}{{ else }}{{ .Site.BaseURL }}{{ end }}" rel="self" type="application/rss+xml" />
    {{- range $posts }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid>{{ .Permalink }}</guid>
      <author>{{ site.Title }} ({{ site.Home.Permalink }})</author>
      {{- with .PublishDate }}<pubDate>{{ .Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>{{ else }}{{ with .Date }}<pubDate>{{ .Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>{{ end }}{{ end }}
      {{- with .Params.tags }}
      {{- range . }}
      <category>{{ . | htmlEscape }}</category>
      {{- end }}
      {{- end }}
      {{- $summary := or .Summary (.Plain | truncate 200) -}}
      <description>{{ printf "<![CDATA[%s]]>" $summary | safeHTML }}</description>
      <content:encoded>{{ printf "<![CDATA[%s]]>" .Content | safeHTML }}</content:encoded>
      {{- with .Params.image }}
      {{- $imageResource := resources.Get . }}
      {{- if $imageResource }}
      <media:content url="{{ $imageResource | absURL }}" type="{{ $imageResource.MediaType }}" medium="image">
        <media:title>{{ $.Title | htmlEscape }}</media:title>
        {{- with $.Params.imageAlt }}
        <media:description>{{ . | htmlEscape }}</media:description>
        {{- end }}
      </media:content>
      {{- else }}
      <media:content url="{{ . | absURL }}" type="image" medium="image">
        <media:title>{{ $.Title | htmlEscape }}</media:title>
        {{- with $.Params.imageAlt }}
        <media:description>{{ . | htmlEscape }}</media:description>
        {{- end }}
      </media:content>
      {{- end }}
      {{- end }}
    </item>
    {{- end }}
  </channel>
</rss>

